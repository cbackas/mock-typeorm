{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["vitest/globals"],
    "strict": false,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}

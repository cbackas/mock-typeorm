{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES6",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist/esm",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["vitest/globals"],
    "strict": false,
    "moduleResolution": "Node",
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
